<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A8BECA"
    android:fillViewport="true"
    tools:context=".presentation.questions.questions_list.QuestionsLangFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_taj_rus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/default_option_border_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="15dp"
            android:text="Тоҷики - Русӣ"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_taj_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/default_option_border_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="15dp"
            android:text="Тоҷики - Англисӣ"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_rus_taj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/default_option_border_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="15dp"
            android:text="Русӣ - Тоҷики"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_rus_eng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/default_option_border_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="15dp"
            android:text="Русӣ - Англисӣ"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_eng_taj"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/default_option_border_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="15dp"
            android:text="Англисӣ - Тоҷики"
            android:textColor="#7A8089"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_eng_rus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="30dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/default_option_border_bg"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:padding="15dp"
            android:text="Англисӣ - Русӣ"
            android:textColor="#7A8089"
            android:textSize="18sp" />

    </LinearLayout>

</ScrollView>